<?xml version="1.0"?>
<block>
  <name>tx_control</name>
  <key>USRP_TX_Control</key>
  <category>USRP Control</category>
  <import>import usrp_control</import>
  <make>usrp_control.tx_control(self.set_$target(), "$host()", $port())</make>

  <param>
    <name>Variable</name>
    <key>target</key>
    <value>tx_control</value>
    <type>string</type>
  </param>

  <param>
    <name>Host</name>
    <key>host</key>
    <value>localhost</value>
    <type>string</type>
  </param>

  <param>
    <name>Port</name>
    <key>port</key>
    <value>53002</value>
    <type>int</type>
  </param>

</block>
